<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/bar_header</item>
        <item name="android:textColor">@color/bar_header</item>
        <item name="android:tint">@color/bar_bottom</item>
        <item name="android:title">@color/bar_header</item>
        <item name="colorControlNormal">@color/bar_bottom</item>
        <item name="actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
        <item name="android:background">@color/bar_header</item>
    </style>

    <style name="SubmenuHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/bar_header</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DetailsForecastText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DetailsForecastTextDetails">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForecastTodayTemp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ForecastTodayDetails">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ForecastTodayDescription">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/bar_header</item>
        <item name="android:fontFamily">@font/bevan</item>
        <item name="android:textColor">@color/bar_header</item>
    </style>

    <style name="ButtonsTextColor">
        <item name="android:textColor">@color/bar_header</item>
    </style>
    <style name="ForecastDetailsDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="DialogTextColor">
        <item name="android:textColor">@color/bar_header</item>
    </style>
    <style name="ForecastDetailsIcons">
        <item name="tint">@color/black</item>
    </style>
</resources>