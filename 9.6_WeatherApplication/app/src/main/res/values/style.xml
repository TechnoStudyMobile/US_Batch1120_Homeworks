<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bar_header</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bar_bottom</item>
    </style>

    <style name="ForecastLIstDegrees">
        <item name="android:textColor">@color/bar_header</item>
        <item name="android:text">"@string/_0"</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DetailsForecastText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DetailsForecastTextDetails">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ForecastTodayTemp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="ForecastTodayDetails">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>