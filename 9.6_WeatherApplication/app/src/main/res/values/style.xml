<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/bar_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:title">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
        <item name="android:background">@color/bar_header</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="SubmenuHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/bar_header</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bar_header</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bar_bottom</item>
    </style>

    <style name="ForecastLIstDegrees">
        <item name="android:textColor">@color/bar_bottom</item>
        <item name="android:text">"@string/_0"</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DetailsForecastText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DetailsForecastTextDetails">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForecastTodayTemp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ForecastTodayDetails">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/bevan</item>
        <item name="android:background">@color/bar_header</item>
    </style>

    <style name="ForecastTodayDescription">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonsTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ForecastDetailsDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ForecastDetailsIcons">
        <item name="tint">@color/white</item>
    </style>
        <style name="SearchBarTheme" parent="MaterialSearchBarLight">
            <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
            <item name="mt_dividerColor">@color/bar_bottom</item>
            <item name="mt_navIconTint">@color/bar_header</item>
            <item name="mt_searchIconTint">@color/bar_header</item>
            <item name="mt_clearIconTint">@color/bar_header</item>
            <item name="mt_menuIconTint">@color/bar_header</item>
            <item name="mt_backIconTint">@color/bar_header</item>
            <item name="mt_textColor">@color/bar_bottom</item>
            <item name="mt_hintColor">@color/searchBarHintColor</item>
            <item name="mt_placeholderColor">@color/bar_bottom</item>
        </style>
</resources>