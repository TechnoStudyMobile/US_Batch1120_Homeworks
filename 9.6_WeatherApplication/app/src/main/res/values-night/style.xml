<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailsForecastText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DetailsForecastTextDetails">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForecastTodayTemp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ForecastTodayDetails">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ForecastTodayDescription">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/bar_header</item>
        <item name="android:fontFamily">@font/bevan</item>
    </style>


    <style name="ForecastDetailsDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ForecastDetailsIcons">
        <item name="tint">@color/black</item>
    </style>
</resources>